<odoo>
    <data>
        <record id="menu_partner_form" model="website.menu">
            <!-- #here record id is the unique id of your record & model is the ‘website.menu’ of the website. -->
            <field name="name">Cliente 9999</field>
            <!-- #here mention the name of the menu to appear. -->
            <field name="url">/redirect_to_page</field>
            <!-- #here mention the url of the website to be redirected after clicking. This is a controller. -->
            <field name="parent_id" ref="website.main_menu"/>
            <!-- #here mention the parent id of the menu which we are inheriting. -->
            <field name="sequence" type="int">22</field>
            <field name="new_window" eval="True"></field>
        </record>
        <record id="menu_client_form" model="website.menu">
            <field name="name">Cliente Local</field>
            <field name="url">/redirect_to_local</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">23</field>
            <field name="new_window" eval="True"></field>
        </record>
        <record id="menu_client_xmlrpc" model="website.menu">
            <field name="name">Cliente XMLRPC</field>
            <field name="url">/redirect_xmlrpc</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">24</field>
            <field name="new_window" eval="True"></field>
        </record>

        <template id="get_db_list">
            <t t-call="website.layout">
                <t t-set="title">Lista Base de Datos</t>
                <div class="oe_structure">
                    <div class="container mt-3">
                        <!-- html input select fields -->
                        <select name="db_selection" style="padding: 3px;">
                            <t t-foreach="selection_options" t-as="option">
                                <t t-raw="option"/>
                                <p><t t-esc="option"/></p>
                            </t>
                        </select>
                    </div>
                </div>
            </t>
        </template>

