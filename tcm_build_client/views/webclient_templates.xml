<odoo>
    <data>
        <record id="menu_wizard_form" model="website.menu">
            <field name="name">Crear Nuevo Cliente</field>
            <field name="url">build_client/launch/wizard</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">22</field>
            <field name="new_window" eval="True"></field>
        </record>

        <record id="menu_wizard_instance" model="website.menu">
            <field name="name">Instalar Cliente</field>
            <field name="url">/build_client/database/test_install</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">25</field>
            <field name="new_window" eval="True"></field>
        </record>

        <template id="build_client_wizard" name="Generador de instancia cliente TCM">
            <link rel="shortcut icon" href="/web/static/src/img/favicon.ico" type="image/x-icon"/>
            <link rel="stylesheet" type="text/css" href="/web/static/lib/fontawesome/css/font-awesome.css"/>
            <link rel="stylesheet" type="text/css" href="/web/static/lib/bootstrap/css/bootstrap.css"/>
            <link rel="stylesheet" type="text/css" href="/tcm_build_client/static/src/css/wizard.css"/>

            <section class="main-content">
                <div class="container">
                    <h1 class="text-center text-uppercase">Generador de Plataforma Cliente TCM</h1>
                    <div class="stepwizard">
                        <div class="stepwizard-row setup-panel">
                            <div class="stepwizard-step">
                                <a href="#step-1"
                                   role="button"
                                   class="btn btn-primary btn-circle">1
                                </a>
                                <p>Paso 1</p>
                            </div>
                            <div class="stepwizard-step">
                                <a
                                        href="#step-2"
                                        role="button"
                                        class="btn btn-default btn-circle disabled">2
                                </a>
                                <p>Paso 2</p>
                            </div>
                            <div class="stepwizard-step">
                                <a
                                        href="#step-3"
                                        role="button"
                                        class="btn btn-default btn-circle disabled">3
                                </a>
                                <p>Paso 3</p>
                            </div>
                            <div class="stepwizard-step">
                                <a
                                        href="#step-4"
                                        role="button"
                                        class="btn btn-default btn-circle disabled">4
                                </a>
                                <p>Paso 4</p>
                            </div>
                            <div class="stepwizard-step">
                                <a
                                        href="#step-5"
                                        role="button"
                                        class="btn btn-default btn-circle disabled">5
                                </a>
                                <p>Paso 5</p>
                            </div>
                        </div>
                    </div>
                    <form role="form" action="/build_client/database/create" method="post">
                        <div class="row setup-content" id="step-1">
                            <div class="col-12">
                                <div class="col-md-12">
                                    <h3>Crear Base de Datos</h3>
                                    <hr/>
                                    <div class="form-group row">
                                        <t t-if="insecure==true">
                                            <input type="hidden" name="master_pwd" class="form-control" value="admin"/>
                                        </t>
                                        <t t-else="">
                                            <label for="master_pwd" class="col-md-4 col-form-label">Contraseña Maestra</label>
                                            <div class="col-md-8">
                                                <input id="master_pwd" type="password" name="master_pwd"
                                                       class="form-control"
                                                       required="required" autofocus="autofocus"/>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="form-group row">
                                        <label for="name" class="col-md-4 col-form-label">Nombre Base Datos</label>
                                        <div class="col-md-8">
                                            <input id="name" type="text" name="name"
                                                   class="form-control"
                                                   required="required"
                                                   autocomplete="off" pattern="^[a-zA-Z0-9][a-zA-Z0-9_.-]+$"
                                                   placeholder="InstanciaTCM"
                                                   title="Solo se permiten carácteres alfanuméricos, subrayados, y puntos."/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="login" class="col-md-4 col-form-label">Email</label>
                                        <div class="col-md-8">
                                            <input id="login" type="text" name="login" class="form-control"
                                                   required="required"
                                                   autocomplete="off"/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="password" class="col-md-4 col-form-label">Contraseña</label>
                                        <div class="col-md-8 input-group">
                                            <input id="password" type="password" name="password" class="form-control"
                                                   required="required" autocomplete="off"/>
                                            <div class="input-group-append">
                                                <span class="fa fa-eye o_little_eye input-group-text" aria-hidden="true"
                                                      style="cursor: pointer;"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phone" class="col-md-4 col-form-label">Número de Teléfono</label>
                                        <div class="col-md-8">
                                            <input id="phone" type="number" name="phone" class="form-control"
                                                   autocomplete="off" maxlength="100"/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="lang" class="col-md-4 col-form-label">Idioma</label>
                                        <div class="col-md-8">
                                            <select id="lang" name="lang" class="form-control" required="required"
                                                    autocomplete="off">
                                                <option value=""></option>
                                                <t t-foreach="langs" t-as="lang">
                                                    <option t-att-value="lang[0]">
                                                        <t t-esc="lang[1]"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="country" class="col-md-4 col-form-label ">País</label>
                                        <div class="col-md-8">
                                            <select id="country" name="country_code" class="form-control"
                                                    autocomplete="off" required="required">
                                                <option value=""></option>
                                                <t t-foreach="countries" t-as="country">
                                                    <option t-att-value="country[0]">
                                                        <t t-esc="country[1]"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="demo" class="col-md-4 col-form-label">Datos de ejemplo</label>
                                        <div class="col-md-8">
                                            <input type="checkbox" id="load_demo_checkbox" class="form-control-sm"
                                                   name="demo" value="0" checked="0"/>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary nextBtn float-right" type="button">Siguiente</button>
                                </div>
                            </div>
                        </div>
                        <div class="row setup-content" id="step-2">
