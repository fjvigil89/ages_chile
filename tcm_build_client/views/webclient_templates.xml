                                                <td class="nameColumn small text-info">
                                                    Empleados Adicionales
                                                </td>
                                                <td class="imageColumn">
                                                    <input type="checkbox" id="myCheckbox2"/>
                                                    <label class="label-check" for="myCheckbox2">
                                                        <img src="/tcm_build_client/static/images/empleados.jpg"/>
                                                    </label>
                                                </td>
                                                <td class="amountColumn pl-2">
                                                    <input id="cant2"
                                                           type="text"
                                                           name="cant2"
                                                           class="form-control"
                                                           autocomplete="off"
