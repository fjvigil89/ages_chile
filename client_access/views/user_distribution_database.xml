<?xml version="1.0"?>
<odoo>
    <data>
        <!--        DISTRIBUTION-->
        <record model="ir.ui.view" id="view_distribution_form">
            <field name="name">distribution</field>
            <field name="model">user.distribution.database</field>
            <field name="arch" type="xml">
                <form string="Distribuciones">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="database" required="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_distribution_tree">
            <field name="name">distribution.tree</field>
            <field name="model">user.distribution.database</field>
            <field name="arch" type="xml">
                <tree string="Distribucion">
                    <field name="name"/>
                    <field name="database"/>
                </tree>
            </field>
        </record>

        <record id="view_distribution_search" model="ir.ui.view">
            <field name="name">distribution.search</field>
            <field name="model">user.distribution.database</field>
            <field name="arch" type="xml">
                <search string="Distribucion">
                    <field name="name"/>
                    <field name="database"/>
                </search>
            </field>
        </record>

        <record id="action_distribution" model="ir.actions.act_window">
            <field name="name">Distribuciones usuarios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">user.distribution.database</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_distribution_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new distribution in your system
                </p>
            </field>
        </record>

        <menuitem id="menu_distribution_parent"
                  name="Distribuciones usuarios"
                  sequence="2"/>

        <menuitem id="menu_distribution_supi"
                  name="Distribuciones usuarios"
                  action="action_distribution"
                  parent="menu_distribution_parent"
                  sequence="2"/>
    </data>
</odoo>